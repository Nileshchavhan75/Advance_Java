<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<!-- Declaring the JavaBean -->
    <jsp:useBean id="u" class="com.controller.MyBean" scope="page" />
    
    <!-- Setting properties -->
    <jsp:setProperty name="u" property="name" value="bhavipotil@gmail.com" />
    <jsp:setProperty name="u" property="password" value="12345" />

    <!-- Getting and displaying properties -->
    <h2>User Details</h2>
    <p><b>Name:</b> <jsp:getProperty name="u" property="name" /></p>
    <p><b>Password:</b> <jsp:getProperty name="u" property="password" /></p>


</body>
</html>